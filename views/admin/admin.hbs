
<div class="container">

    <h2> packages </h2>

    <a href="/admin/register" class="btn btn-primary">add new package</a>

        <div class="row">


            {{#each doc}}

                <div class="col-md-6 col-lg-3">

                    <div class="card">
                        <img src="{{this.imagePath}}" class="img-responsive" alt="...">
                        <div class="card-block">
                            <h5 class="card-title">{{this.place}}</h5>
                            <p class="card-text">{{this.description1}}.<br>
                                {{this.description2}}<br>
                                ${{this.price}}/-
                            </p>

                            <div class="clearfix">
                                <a href="/admin/edit/{{this._id}}" class="btn btn-primary">Edit</a>
                                <a href="/admin/delete/{{this._id}}" class="enquiry pull-left"><i class="fas fa-envelope">Delete</i></a>
                            </div>
                        </div>
                    </div>

                </div>
            {{/each}}
        </div>

    </div>

</div>