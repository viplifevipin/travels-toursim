
<div class="row">
    <div class="container col-md-4 col-md-offset-3 ">
        <h1>paytm</h1>
{{#abc}}
        <form action="/paynow" method="post" >
                <div class="form-group">
                    <label for="text">Name</label>
                    <input type="text" id="subject" name="subject" class="form-control">
                </div>

                <div class="form-group">
                    <label for="email">E-mail</label>
                    <input type="text" id="email" name="email" class="form-control" placeholder="">

                </div>

                <div class="form-group">
                    <label for="text">Phone</label>
                    <input type="text" id="message" name="phone" class="form-control">
                </div>

            <div class="form-group">
                <label for="text">Place</label>
                <input type="text" id="message" name="place" class="form-control" value="{{this.place}}">
            </div>

                <div class="form-group" >
                    <label for="text">Amount</label>
                    <input value="{{this.price}}" id="message" name="amount" class="form-control">
                </div>

                <button type="submit" class="btn btn-primary">Send</button>

        </form>
{{/abc}}
    </div>

</div>



