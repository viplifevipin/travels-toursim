
<div class="container">

    <div>
        <h1 class="offer">PACKAGES</h1>
    </div>

    <div class="row">


        {{#each doc}}

            <div class="col-md-6 col-lg-3" >

                <div class="card" >
                    <img src="{{this.imagePath}}" class="img-responsive" alt="...">
                    <div class="card-block">
                        <h5 class="card-title">{{this.place}}</h5>
                        <p class="card-text">{{this.description1}}.<br>
                            {{this.description2}}<br>
                            ${{this.price}}/-
                        </p>
                        <div class="clearfix">
                            <a href="#" class="btn btn-primary">Book your seat</a>
                            <a href="/enquiry/form" class="enquiry pull-left"><i class="fas fa-envelope"> enquiry </i></a>
                        </div>

                    </div>
                </div>

            </div>
        {{/each}}
    </div>
</div>