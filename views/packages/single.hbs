
    <div>
        <h1 class="offer">PACKAGES</h1>
        <form action="/single" method="get" class="container form-inline my-2 my-lg-0">
            <div class="form-group">
                <input type="text" name="search" placeholder="packages search" class="form-control" style="border-left-width: 1px;margin-left: 408px;margin-right: 8.5rem;">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit" value="search" style="margin-left: -131px;">Search</button>
            </div>
        </form>
    </div>

    <div class="row">


        {{#each a}}

            <div class="col-md-6 col-lg-3" >

                <div class="card" style="margin-bottom: 0px;padding-bottom: 34px;">
                    <img src="{{this.imagePath}}" class="img-responsive" alt="..."  style="padding-bottom: 28px;">
                    <div class="card-block">
                        <h5 class="card-title">{{this.place}}</h5>
                        <h5 class="card-text">seats:-{{this.persons}}</h5>
                        <p class="card-text">{{this.description1}}.<br>
                            {{this.description2}}<br>
                            ${{this.price}}/-
                        </p>
                        <div class="clearfix">
                            <a href="/alone/{{this._id}}" class="btn btn-primary">Book your seat</a>
                            <a href="/enquiry" class="enquiry pull-left"><i class="fas fa-envelope"> enquiry </i></a>
                        </div>

                    </div>
                </div>

            </div>
        {{/each}}
    </div>
</div>